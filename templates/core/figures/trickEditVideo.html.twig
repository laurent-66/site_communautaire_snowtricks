{% extends "base.html.twig" %}
{% block title %}Modification du lien video trick{% endblock %}
{% block body %} 
<div class="container-fluid mx-0 my-0 px-0 mx-0" id="register">
    <div class="container-fluid container-body">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="container card rounded shadow p-3 mb-5">
                    <h2 class="text-center">Modifier le lien de la video de la figure {{currentfigure.name}}</h2>
                    {{form_start(formEditMediasTrick)}}
                    {{form_widget(formEditMediasTrick)}}
                    <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Modifier l'image</button>
                    {{form_end(formEditMediasTrick)}}
                </div>
            </div>
        </div>       
    </div>
</div>
{% endblock %} 