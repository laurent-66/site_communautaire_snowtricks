{% for media in arrayMedias %}
    {% if media[1] == "img" %}
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">	
                <div class="card px-0 mx-0 bg-light rounded-3">
                    <img class="img-fluid mx-auto d-block" src="/uploads/illustrationsCollection/{{media[0]}}" alt="slide 2">
                    <div class="card-body">
                        {% if app.user %}
                            <div class="row mx-0 px-0 d-flex flex-nowrap d-flex justify-content-end">
                                <div class="col-md-4 col-lg-4 col-xl-4 mx-0 px-0 d-flex justify-content-end">
                                    <a href="#" class="btn btn-info mr-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>	
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">	
                <div class="card px-0 mx-0 bg-light rounded-3">
                <iframe width="424" height="238" src="https://www.youtube.com/embed/{{media[0]}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <div class="card-body">
                        {% if app.user %}
                            <div class="row mx-0 px-0 d-flex flex-nowrap d-flex justify-content-end">
                                <div class="col-md-4 col-lg-4 col-xl-4 mx-0 px-0 d-flex justify-content-end">
                                    <a href="#" class="btn btn-info mr-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>	
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}    