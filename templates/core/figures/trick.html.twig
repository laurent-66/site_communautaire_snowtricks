                                    </div>

                                        {# {% elseif loop.last %}
                                          {% for j in arrayLastLoop %}
                                            <img class="img-carousel" src='/uploads/illustrationsCollection/{{arrayLastLoop[j]}}' alt="img">
                                          {% endfor %}
                                        {% else %}
                                          {% for j in arrayCurrentLoop %}
                                            <img class="img-carousel" src='/uploads/illustrationsCollection/{{arrayCurrentLoop[j]}}' alt="img">
                                          {% endfor %}
                                        {% endif %} #}

                                  {% endfor %}
                                </div>
                            </div>

                            <div class="carousel-item active">
                                <div class="row mx-0 px-0 d-flex justify-content-evenly align-items-center">
                                    <div class="item-carousel col-sm-12 col-md-12 col-lg-12">

                                          {% for j in 5 .. 10 %}
                                            <img class="img-carousel" src='/uploads/illustrationsCollection/{{arrayCurrentLoop[j]}}' alt="img">
                                          {% endfor %}
                                    </div>

                                        {# {% elseif loop.last %}
                                          {% for j in arrayLastLoop %}
                                            <img class="img-carousel" src='/uploads/illustrationsCollection/{{arrayLastLoop[j]}}' alt="img">
                                          {% endfor %}
                                        {% else %}
                                          {% for j in arrayCurrentLoop %}
