{% extends 'base.html.twig' %}
{% block title %}trick{% endblock %}
{% block body %}
    <div class="imageHero px-0">
		<div class="arrow-down">
			<a href="#Tricks-list">
				<i class="fas fa-arrow-down fa-3x" style="color:white;"></i>
			</a>
		</div>
	</div>
    <div class="mx-0 px-0 main-container">
        <div class="container px-0 mx-0 trick-card">
            <div class="row px-0 mx-0">
                <div class="imgHeroTrick" style="background: no-repeat url('/uploads/coverImage/{{figure.coverImage}}');">
                    <h1>{{figure.name}}</h1>
                </div>
            </div>
            <div class="manageImageHero">
                <a href="{{ path('trickEditPage', {'slug': figure.slug} )}}" class="btn btn-info">
			        <i class="fas fa-edit"></i>
				</a>
				<a href="#" class="btn btn-danger">
