<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <script src="https://kit.fontawesome.com/e48fcf7626.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light py-0 " style="height:80px;">
            <div class="container-fluid">
                <div class="menu">
                    <div><a class="navbar-brand"  href="{{ path('homePage') }}"><i class="fas fa-snowboarding fa-2x"></i><strong> SNOWTRICKS</strong></a></div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor03">
                        <ul class="navbar-nav">
                            <li class="menu-item">
                                <a class="item nav-link" href="{{ path('homePage') }}">Home |</a>
                            </li>
                            <li class="menu-item">
                                <a class="item nav-link" href="{{ path('trickPage') }}">Tricks |</a>
                            </li>
                            <li class="menu-item">
                                <a class="item nav-link" href="{{ path('loginPage') }}">sign in |</a>
                            </li>
                            <li class="menu-item">
                                <a class="item nav-link" href="{{ path('registerPage') }}">sign up</a>
                            </li>
                        </ul>
                    </div>
                </div>









            </div>





        </nav>  
        {% block body %}{% endblock %}
        <footer class="bg-secondary py-0" style="height:80px;">
            <p class="text-light text-center pt-3">Copyright @ 2021</p>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
